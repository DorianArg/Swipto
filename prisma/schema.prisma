generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Coin {
  id       String   @id        // ex: "bitcoin"
  symbol   String
  name     String
  category String?
  swipes   Swipe[]             // ðŸ‘ˆ relation inverse (1 coin â†’ N swipes)
  
  @@map("Coin")
}

model Swipe {
  id        String   @id @default(cuid())
  userId    String
  coinId    String
  action    String   // 'like', 'superlike', 'dislike'
  createdAt DateTime @default(now())
  
  coin      Coin     @relation(fields: [coinId], references: [id])
  
  @@map("Swipe")
}